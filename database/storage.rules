rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /images/{image} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isMfecane(request.auth.uid) && request.resource.contentType == 'image/jpeg';
    }
  }
}

function isMfecane(userId) {
  return userId == 'HCTUurg7HRYCLPxg6tnfzwEDQep1' || userId == 'fLD7Q6UUbb8qI1oyReMIzYXtawvO';
}
